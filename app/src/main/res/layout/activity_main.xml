<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".MainActivity">

  <FrameLayout
      android:id="@+id/main_frame"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#50808080" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="5">
        <ImageView
            android:id="@+id/main_home_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_home_selected"
            android:padding="14dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/main_search_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search_unselected"
            android:padding="14dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/main_reel_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_reel"
            android:padding="14dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/main_activity_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_heart_outline"
            android:padding="14dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/main_profile_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:padding="14dp"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>